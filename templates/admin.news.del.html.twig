{% extends 'base.html.twig' %}
{% block body %}
{% include 'admin.base.html.twig' %}
<div class="container">
  <h1>Remove article</h1>

  <form>
    <div class="form-group">
      <label for="atname">Article name</label>
      <input type="text" class="form-control" id="atname" name="atname"
             readonly="readonly" value="{{ data.atname }}">
    </div>
    <div class="form-group">
      <label for="atcontent">Article content</label>
      <textarea class="form-control" id="atcontent" rows="5" name="atcontents" readonly="readonly">{{ data.atcontents }}</textarea>
    </div>

    <a href="../del/confirm/{{ data.id }}" class="btn btn-primary">Confirm delete</a>
    <a href="../" class="btn btn-outline-primary">Cancel</a>

  </form>

</div>
{% endblock %}
